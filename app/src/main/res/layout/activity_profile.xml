<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drwaer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:orientation="vertical">






            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name_tv"
                android:layout_marginTop="@dimen/twenty"
                android:gravity="center"
                android:text="Eddie Lobanovskiy"
                android:textColor="@color/toolbar_color"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/twenty">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fifty"
                        android:layout_weight="1"
                        android:src="@drawable/call" />

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.omninos.chroeslammer.Helper.Hexagon_Image_View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_pic"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="105dp"
                            android:src="@drawable/check" />


                    </RelativeLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fifty"
                        android:layout_weight="1"
                        android:src="@drawable/chat" />


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/thirty"
                    android:id="@+id/profile_catogery_n_address_layout"
                    android:visibility="visible"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginRight="50dp">

                        <TextView
                            android:id="@+id/category_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Work As"
                            android:textColor="#fff"
                            android:textSize="17dp"
                            android:layout_marginLeft="@dimen/hundered"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/second_cat_tv"
                            android:gravity="center"
                            android:text="(Freelancer)"
                            android:layout_weight="1"
                            android:layout_toRightOf="@id/category_text_view"
                            android:textColor="@color/toolbar_color"
                            android:textSize="17dp"
                            android:layout_marginLeft="@dimen/five"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/forty"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/twenty"
                        android:background="@color/white_color">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/loction" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten"
                            android:id="@+id/address_tv"
                            android:text="Your address"
                            android:textColor="#fff"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:background="@color/toolbar_color"
                    android:layout_marginTop="@dimen/thirty"
                    android:gravity="center">

                    <com.omninos.chroeslammer.Helper.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Project Completed"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                        android:textSize="15dp"/>



                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_bg"
                    android:layout_margin="@dimen/ten"/>






            </LinearLayout>

          <!--  <LinearLayout
                android:id="@+id/loginLT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:background="@drawable/custom_login_btn"
                android:gravity="center"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:id="@+id/edit_profile_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="18dp" />
            </LinearLayout>-->

        </LinearLayout>

    <fragment
        android:id="@+id/mainImagesList"
        android:name="com.omninos.chroeslammer.Fragments.DrawerFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_drawer"
        xmlns:app="http://schemas.android.com/apk/res-auto"></fragment>




</android.support.v4.widget.DrawerLayout>
    </LinearLayout>